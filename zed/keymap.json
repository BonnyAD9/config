// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "Workspace",
    "bindings": {
      // "shift shift": "file_finder::Toggle"
      "ctrl-;": "terminal_panel::ToggleFocus",
      "alt-h": "workspace::ActivatePaneLeft",
      "alt-l": "workspace::ActivatePaneRight"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "ctrl-shift-d": "editor::DuplicateSelection"
    }
  },
  {
    "context": "vim_mode == normal",
    "bindings": {
      "shift-alt-l l": "pane::SplitRight",
      "shift-alt-l k": "pane::SplitDown",
      "shift-alt-k h": [
        "workspace::MoveItemToPaneInDirection",
        { "direction": "left" }
      ],
      "shift-alt-k j": [
        "workspace::MoveItemToPaneInDirection",
        { "direction": "down" }
      ],
      "shift-alt-k k": [
        "workspace::MoveItemToPaneInDirection",
        { "direction": "up" }
      ],
      "shift-alt-k l": [
        "workspace::MoveItemToPaneInDirection",
        { "direction": "right" }
      ],
      "-": ["workspace::SendKeystrokes", "j _"],
      "§": ["workspace::SendKeystrokes", "k _"],
      "g |": ["workspace::SendKeystrokes", "8 0 |"],
      "ctrl-shift-j": ["workspace::SendKeystrokes", "8 1 | F space r enter"],
      "Y": ["workspace::SendKeystrokes", "y $"]
    }
  },
  {
      "context": "!showing_completions",
      "bindings": {
          "alt-j": "workspace::ActivatePaneDown",
          "alt-k": "workspace::ActivatePaneUp"
      }
  },
  {
    "context": "Editor && vim_mode == normal",
    "bindings": {
      "Enter": ["workspace::SendKeystrokes", "o Escape"],
      "Shift-Enter": ["workspace::SendKeystrokes", "O Escape"]
    }
  },
  {
    "context": "Editor && (vim_mode == normal || vim_mode == visual)",
    "bindings": {
      "shift-alt-j": "editor::MoveLineDown",
      "shift-alt-k": "editor::MoveLineUp",
      "+": ["workspace::SendKeystrokes", "1"],
      "ě": ["workspace::SendKeystrokes", "2"],
      "š": ["workspace::SendKeystrokes", "3"],
      "č": ["workspace::SendKeystrokes", "4"],
      "ř": ["workspace::SendKeystrokes", "5"],
      "ž": ["workspace::SendKeystrokes", "6"],
      "ý": ["workspace::SendKeystrokes", "7"],
      "á": ["workspace::SendKeystrokes", "8"],
      "í": ["workspace::SendKeystrokes", "9"],
      "é": ["workspace::SendKeystrokes", "0"]
    }
  },
  {
    "context": "Editor && showing_code_actions",
    "bindings": {
      "tab": "editor::ConfirmCodeAction"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "alt-a": ["workspace::SendKeystrokes", "escape A"],
      "alt-i": ["workspace::SendKeystrokes", "escape I"],
      "alt-e": ["workspace::SendKeystrokes", "escape e a"],
      "alt-b": ["workspace::SendKeystrokes", "escape b i"],
      "alt-shift-e": ["workspace::SendKeystrokes", "escape E a"],
      "alt-shift-b": ["workspace::SendKeystrokes", "escape B i"],
      "alt-w": ["workspace::SendKeystrokes", "escape w i"],
      "alt-o": ["workspace::SendKeystrokes", "escape o"],
      "alt-shift-o": ["workspace::SendKeystrokes", "escape O"],
      "alt-p": ["workspace::SendKeystrokes", "escape p a"],
      "alt-shift-p": ["workspace::SendKeystrokes", "escape P i"]
    }
  },
  {
    "context": "Editor && vim_mode == insert",
    "bindings": {
      "alt-h": ["workspace::SendKeystrokes", "escape h a"],
      "alt-l": ["workspace::SendKeystrokes", "escape l a"]
    }
  },
  {
    "context": "Editor && vim_mode == insert && !showing_completions",
    "bindings": {
      "alt-j": ["workspace::SendKeystrokes", "escape j a"],
      "alt-k": ["workspace::SendKeystrokes", "escape k a"]
    }
  },
  {
    "context": "(Editor || vim_mode == insert) && showing_completions",
    "bindings": {
      "tab": "menu::Confirm",
      "enter": "editor::Newline",
      "alt-j": "editor::ContextMenuNext",
      "alt-k": "editor::ContextMenuPrevious"
    }
  }
]
